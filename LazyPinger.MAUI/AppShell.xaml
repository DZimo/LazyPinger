<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LazyPingerMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LazyPingerMAUI.Views"
    xmlns:helpers="clr-namespace:LazyPinger.Core.Utils;assembly=LazyPinger.Core"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    Title="Lazy Pinger - as fast as possible">

    <Shell.TitleView>
        <Grid>
            <Button Text="☰" 
                    Clicked="OnHamburgerClicked" 
                    HorizontalOptions="Start" 
                    BackgroundColor="Transparent" 
                    FontSize="24"/>
        </Grid>
    </Shell.TitleView>

    <Shell.ToolbarItems>
        <ToolbarItem Text="☰"  
                     Clicked="OnHamburgerClicked">
        </ToolbarItem>
    </Shell.ToolbarItems>

    <FlyoutItem Title="Home"
                x:Name="MainTab">
        <FlyoutItem.Icon>
            <FontImageSource FontFamily="MaterialDesign"
              Size="18"
              Glyph="{x:Static helpers:MaterialIcons.Home}"/>
        </FlyoutItem.Icon>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="main"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem  Title="Settings" 
             x:Name="SettingsTab">
        <FlyoutItem.Icon>
            <FontImageSource FontFamily="MaterialDesign"
              Size="18"
              Glyph="{x:Static helpers:MaterialIcons.Settings}"/>   
        </FlyoutItem.Icon>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings"/>
        </Tab>
    </FlyoutItem>

</Shell>
