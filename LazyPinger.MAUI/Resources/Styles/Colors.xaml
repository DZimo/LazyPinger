<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->

    <Color x:Key="Primary">#ffc300</Color>
    <Color x:Key="PrimaryDark">#ffc300</Color>
    <Color x:Key="PrimaryDarkBlack">#d2a100</Color>
    <Color x:Key="PrimaryLighter">#ffee00</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#001930</Color>
    <Color x:Key="SecondaryLighter">#001930</Color>
    <Color x:Key="SecondaryDarkText">#003566</Color>
    <Color x:Key="Tertiary">#000814</Color>
    <Color x:Key="PrimaryDarkAlternative">#709e7900</Color>
    <Color x:Key="PrimaryDarkSecondAlternative">#50f5da84</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <Color x:Key="Gray700">#303030</Color>

    <!-- Gradients -->
    
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryDarkAlternative}" Offset="0.0" />
        <GradientStop Color="{StaticResource PrimaryDarkSecondAlternative}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GreyGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Gray900}" Offset="0.0" />
        <GradientStop Color="{StaticResource Gray950}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="WhiteGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource White}" Offset="0.0" />
        <GradientStop Color="{StaticResource Gray100}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Tertiary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="0.5" />
        <GradientStop Color="{StaticResource Tertiary}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GoldenGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryLighter}" Offset="0.0" />
        <GradientStop Color="{StaticResource PrimaryDarkBlack}" Offset="0.5" />
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Brushes -->

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="PrimaryDarkAlternativeBrush" Color="{StaticResource PrimaryDarkAlternative}"/>
    <SolidColorBrush x:Key="PrimaryDarkSecondAlternativeBrush" Color="{StaticResource PrimaryDarkSecondAlternative}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>

</ResourceDictionary>