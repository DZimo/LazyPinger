﻿<?xml version="1.0" encoding="utf-8"?>
<Project>
	<PropertyGroup>
		<RuntimeIdentifier>osx-x64</RuntimeIdentifier>
		<SelfContained>true</SelfContained>
		<PublishSingleFile>true</PublishSingleFile>
		<PublishTrimmed>true</PublishTrimmed>

		<MacPackage>true</MacPackage>
		<Configuration>Release</Configuration>
		<PublishDir>bin/Release/net8.0/osx-x64/pkg/</PublishDir>
		<ApplicationId>com.ibendroid.automater</ApplicationId>
		<PackageVersion>1.1.0</PackageVersion>

		<MacPackageIdentifier>com.ibendroid.automater</MacPackageIdentifier>
		<MacPackageInstallLocation>/Applications/MyApp</MacPackageInstallLocation>
		<UseAppHost>true</UseAppHost>

	</PropertyGroup>
</Project>