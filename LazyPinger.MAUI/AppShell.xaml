<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LazyPingerMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LazyPingerMAUI.Views"
    xmlns:helpers="clr-namespace:LazyPinger.Core.Utils;assembly=LazyPinger.Core"
    xmlns:vm="clr-namespace:LazyPingerMAUI.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="True"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    x:DataType="vm:MainViewModel"
    Title="Lazy Pinger - as fast as possible">

    <!--<Shell.NavBarIsVisible>
        <OnPlatform x:TypeArguments="x:Boolean">
            <On Platform="Android" Value="True"/>
            <On Platform="Windows" Value="False"/>
        </OnPlatform>
    </Shell.NavBarIsVisible>-->

    <Shell.TitleView>
        <ContentView ControlTemplate="{StaticResource LazyPingerHeader}"
                     BindingContext="{Binding SloganRandomText}"/>
    </Shell.TitleView>

    <Shell.FlyoutHeader>
        <ContentView ControlTemplate="{StaticResource LazyPingerHeader}"
                     BindingContext="{Binding SloganRandomText}"/>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Home"
                x:Name="MainTab">
        <FlyoutItem.Icon>
            <FontImageSource FontFamily="MaterialDesign"
              Size="18"
              Glyph="{x:Static helpers:MaterialIcons.Home}"/>
        </FlyoutItem.Icon>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="main"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem  Title="Settings" 
             x:Name="SettingsTab">
        <FlyoutItem.Icon>
            <FontImageSource FontFamily="MaterialDesign"
              Size="18"
              Glyph="{x:Static helpers:MaterialIcons.Settings}"/>   
        </FlyoutItem.Icon>
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings"/>
        </Tab>
    </FlyoutItem>

</Shell>
