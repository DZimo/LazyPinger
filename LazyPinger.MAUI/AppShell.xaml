<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LazyPingerMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LazyPingerMAUI.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Title="LazyPingerMAUI">

    <!--<ShellContent
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />-->

    <Shell.TitleView>
        <Grid>
            <Button Text="☰" 
                    Clicked="OnHamburgerClicked" 
                    HorizontalOptions="Start" 
                    BackgroundColor="Transparent" 
                    FontSize="24"/>
        </Grid>
    </Shell.TitleView>

    <Shell.ToolbarItems>
        <ToolbarItem Text="☰"  
                     Clicked="OnHamburgerClicked">
        </ToolbarItem>
    </Shell.ToolbarItems>

    <FlyoutItem Title="Home"
                    Icon="lazy_pinger_logo.png"
                    x:Name="MainTab">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="main"/>
        </FlyoutItem>
        <FlyoutItem  Title="Settings" 
             x:Name="SettingsTab">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings"/>
        </FlyoutItem>

</Shell>
