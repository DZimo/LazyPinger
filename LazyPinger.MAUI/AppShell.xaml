<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LazyPingerMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LazyPingerMAUI.Views"
    xmlns:viewsTCP="clr-namespace:LazyPingerMAUI.Views.TCP"
    xmlns:viewsCAN="clr-namespace:LazyPinger.MAUI.Views.CAN"
    xmlns:helpers="clr-namespace:LazyPinger.Core.Utils;assembly=LazyPinger.Core"
    xmlns:vm="clr-namespace:LazyPingerMAUI.ViewModels"
    Shell.FlyoutBehavior="Flyout"
    NavigationPage.HasNavigationBar="True"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    FlyoutBackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray900}}"
    Title="Lazy Pinger - as fast as possible">

    <!--<Shell.NavBarIsVisible>
        <OnPlatform x:TypeArguments="x:Boolean">
            <On Platform="Android" Value="True"/>
            <On Platform="Windows" Value="False"/>
        </OnPlatform>
    </Shell.NavBarIsVisible>-->

    <Shell.TitleView>
        <ContentView ControlTemplate="{StaticResource LazyPingerHeader}"
                     BindingContext="{Binding SloganRandomText}"/>
    </Shell.TitleView>

    <Shell.FlyoutHeader>
        <ContentView ControlTemplate="{StaticResource LazyPingerHeader}"
                     BindingContext="{Binding SloganRandomText}"/>
    </Shell.FlyoutHeader>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Home">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialDesign"
                 Size="18"
                 Glyph="{x:Static helpers:MaterialIcons.Home}"/>
            </Tab.Icon>
            <ShellContent Title="Home" ContentTemplate="{DataTemplate views:MainPage}" Route="main"/>
        </Tab>
        <Tab Title="TCP/IP">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialDesign"
                Size="18"
                Glyph="{x:Static helpers:MaterialIcons.Network_node}"/>
            </Tab.Icon>
            <ShellContent Title="Ping"  ContentTemplate="{DataTemplate viewsTCP:PingView}" Route="network"/>

            <ShellContent Title="Server/Client"  ContentTemplate="{DataTemplate views:NetworkPage}" Route="network"/>
        </Tab>
        <Tab Title="CAN">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialDesign"
                Size="18"
                Glyph="{x:Static helpers:MaterialIcons.Laptop_car}"/>
            </Tab.Icon>
            <ShellContent Title="CAN"  ContentTemplate="{DataTemplate viewsCAN:CanPage}" Route="network"/>
        </Tab>
        <Tab Title="Settings">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialDesign"
                                 Size="18"
                                 Glyph="{x:Static helpers:MaterialIcons.Settings}"/>
            </Tab.Icon>
            <ShellContent Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}" Route="settings"/>
        </Tab>
    </FlyoutItem>

    <!--<Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="10" Background="{StaticResource BlueGradient}">
                <Label Text="{Binding Title}" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="4" />
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>-->
    
</Shell>
