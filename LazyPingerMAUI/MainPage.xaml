<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:LazyPingerMAUI.Views"
             xmlns:models="clr-namespace:LazyPinger.Base.Models;assembly=LazyPinger.Base"
             x:Class="LazyPingerMAUI.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="*">
            <VerticalStackLayout Grid.Row="0" 
                                 HorizontalOptions="Fill"
                                 Padding="20"
                                 Background="{StaticResource Tertiary}">
                <Label Style="{StaticResource Headline}" 
                       TextColor="{StaticResource Primary}"
                       Text="LazyPinger, as lazy as possible ">
                </Label>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="End" Opacity="0.9" BackgroundColor="Transparent">

                <Button Margin="20"
                    x:Name="CounterBtn"
                    Text="Ping"
                    VerticalOptions="End"
                    Clicked="OnCounterClicked"/>

                <Button Margin="20"
                    Text="Stop"
                    VerticalOptions="End"/>

            </HorizontalStackLayout>

            <CollectionView Grid.Row="2" ItemsSource="{Binding DetectedDevices}" ItemsLayout="VerticalGrid,3">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:DevicePing">
                            <views:DeviceView DevicePing="{Binding}"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
             </CollectionView>
        </Grid>
    </ScrollView>

</ContentPage>
