<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyPingerMAUI.Views.DeviceView"
             x:Name="test">
    <VerticalStackLayout>
        <Border BindingContext="{x:Reference test}"
            BackgroundColor="{Binding DeviceColor}"
            Stroke="{Binding DeviceBorderColor}">
            <Grid>
                <Border Stroke="{Binding BorderColor, FallbackValue='Black'}"
                    BackgroundColor="{Binding IconBackgroundColor, FallbackValue='Grey'}">
                    <!-- <Image Source="{Binding IconImageSource}"/> -->
                 </Border>
                <Label Text="{Binding DeviceNameProperty, FallbackValue='Device Name'}"/>
                <BoxView BackgroundColor="{Binding BorderColor, FallbackValue='Black'}" />
                <!-- <Label Text="{Binding CardDescription, FallbackValue='Card description text.'}"/>-->
                </Grid>
        </Border>
    </VerticalStackLayout>
</ContentView>
